inputs:
  input:
    source: response.json
    format: json
    logs_key: logs
    timestamp_field: timestamp
    timestamp_unit: ms
    value_field: value
    service_field: serviceName
    pi_metadata_field: piMetadata
  output:
    artifacts:
    - tensors.node_features
    - tensors.edge_index
    - tensors.temporal_sequences
    - graph
    - node_features
    - metadata
preprocess:
  normalize_features: true
  min_sequence_length: 10
graph:
  create_temporal_edges: true
  temporal_window_seconds: 5
  node_types:
  - service
  - entity
  - transaction
  edge_types:
  - structural
  - temporal
  node_id_fields:
    service: serviceName
    entity: piMetadata.entityId
    transaction: piMetadata.transactionId
features:
  feature_dim: 12
  stats:
